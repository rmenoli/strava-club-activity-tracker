# Strava API credentials
STRAVA_CLIENT_ID=1234567890
STRAVA_CLIENT_SECRET=your-client-secret
STRAVA_REDIRECT_URI=http://localhost:8000/auth/strava/callback

# Application secrets
SECRET_KEY=your-secret-key-for-sessions

